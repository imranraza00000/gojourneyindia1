<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/link_file/csslink/allcss.ejs"); %>
  </head>

  <body>
    <div class="layer"></div>
    <%- include("./whatsapp.ejs"); %>
    <div class="header-color">
      <%- include("./partials/layout/header/header.ejs"); %>
    </div>
    <section class="margin-top-bottom">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-xs-12 offset-md-1 col-sm-10 offset-lg-2">
            <div class="row">
               <%- include("./socialmediaicon.ejs"); %>
              <div class="col-md-7 p-4 border bg-white">
                <div id="sign_in">
                  <% if(typeof forgetPasswordmsg !='undefined' ){%>
                  <div class="alert alert-dismissible alert-danger">
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="alert"
                    ></button>
                    <strong> <%= forgetPasswordmsg %> </strong>
                  </div>
                  <% } %>
                   <% if(typeof success !='undefined' ){%>
                  <div class="alert alert-dismissible alert-success">
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="alert"
                    ></button>
                    <strong> <%= success %> </strong>
                  </div>
                  <% } %>
                  <form method="post" action="">
                    <div class="row">
                      <h3 class="text-dark py-5">Rest Password</h3>
                      <div class="form-group col-md-12">
                        <label class="text-dark">Email</label>
                        <input
                          type="text"
                          class="form-control"
                          name="email"
                          id="forgetPassword"
                          placeholder="Enter your Email"
                        />
                        <i class=""></i>
                      </div>
                    </div>
                    <div class="col-6 t">
                      <button type="submit" class="btn btn-primary">
                        Send link
                      </button>
                      <a href="/sign-in" class="btn btn-danger">Back</a>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include("./partials/layout/footer/footer.ejs"); %>
    <script src="js/jquery-3.6.0.min.js"></script>
    <script src="js/common_scripts_min.js"></script>
    <script src="js/functions.js"></script>
  </body>
</html>
